<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherFeaturesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#808080"
            android:textColor="#FFFFFF"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/colorTextView"
            android:layout_width="50dp"
            android:layout_height="33dp"
            android:text="Color:"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinColor"
            android:layout_width="374dp"
            android:layout_height="44dp"
            android:entries="@array/rgb_led_color"/>

        <TextView
            android:id="@+id/periodTextView"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:text="Period:"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editPeriod"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="Integer,e.g.5" />

        <TextView
            android:id="@+id/dutyTextView"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:text="Duty:"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editDuty"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="Integer,e.g.1" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set LED"
            android:onClick="setRGBLedNotification"/>
    </LinearLayout>
</RelativeLayout>